
<link rel="stylesheet" href="./css/bootstrap.min.css">
<link rel="stylesheet" href="../css/style.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div id="crear" class="container col-7 mt-5">
    <form action="/modificar/<%= bs.id%>" method="POST">
        <label class='mb-3 fs-4' for="titulo">Titulo</label>
        <input class='w-100' type="text" name="titulo" value="<%= bs.titulo%>">
        <label class='mb-3 fs-4 mt-3' for="creador">Creador</label>
        <input class='w-100' type="text" name="creador" value="<%= bs.creador%>">
        <label class='mb-3 fs-4 mt-3' for="urlimagen">Url de la imagen</label>
        <input class='w-100' type="text" name="urlimagen" value="<%= bs.urlimagen%>">
        <label class='mb-3 fs-4 mt-3' for="introduccion">Introduccion</label>
        <input class='w-100' type="text" name="introduccion" value="<%= bs.introduccion%>">
        <select class="mt-3" name="categoria" multiple>
            <option value='aventura'>Aventura</option>
            <option value='ciencia'>Ciencia</option>
            <option value="caricatura">Caricatura</option>
            <option value="ficcion">Ficcion</option>
        </select>
        <label class='mb-3 fs-4 mt-3 w-100' for="enunciado">Enunciado</label>
        <textarea class='w-100' name="enunciado" cols="30" rows="10"><%= bs.enunciado%></textarea>
        <div class="w-100 d-flex justify-content-center mt-4 mb-5">
            <label class='fs-5 col-1' for="color">Color</label>
            <input class='col-4 border border-2 mt-1' type="color" name="color" value="<%= bs.color%>">
            <label class='fs-5 col-2' style="margin-left: 10px;" for="color">Color letra</label>
            <input class='col-4 border border-2 mt-1' type="color" name="colorletra" value="<%= bs.colorletra%>">
        </div>
        <div class="d-flex justify-content-center mt-4">
            <button class="w-50 bg-danger text-white border-0 p-2 mb-5 m-3" type="button"><a class="text-decoration-none text-white" href="/">Cancerlar</a></button>
            <button class="w-50 bg-success text-white border-0 p-2 mb-5 m-3" type="submit">enviar</button>
        </div>
        
    </form>
</div>



