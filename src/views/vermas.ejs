<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div class="d-flex m-5 justify-content-center border border-4">
    <img class="w-100 border-1" src="<%= mas.urlimagen%>" alt="">

    <div class="m-4 ">
        <h2>Titulo</h2>
        <p class="fs-2 pb-2"><%= mas.titulo%></p>
        <h2>Enunciado</h2>
        <p class="fs-3 pb-2"><%= mas.enunciado%></p>
        <h2>Creador</h2>
        <p class="fs-4 pb-2"><%= mas.creador%></p>
        <h2>Fecha</h2>
        <p class="fs-4 pb-2"><%= mas.calendar%></p>
        <h2>Hora</h2>
        <p class="fs-4 pb-2"><%= mas.time%></p>
        <button class="bg-info border border-0 p-2 rounded-3"><a class="text-white text-decoration-none" href="/">Regresar</a></button>
    </div>
</div>
<div>
    <form action="/comment" method="POST">
        <input name="nombre" type="text">
        <textarea name="mensajeComment" cols="30" rows="10"></textarea>
        <button type="submit">Enviar</button>
    </form>
</div>

