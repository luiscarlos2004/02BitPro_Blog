
<link rel="stylesheet" href="./css/bootstrap.min.css">
<link rel="stylesheet" href="../css/style.css">
<%- include('navbar.ejs')%>
<%- include('buscar.ejs')%>

<div id="cards">
  <h1 class="text-center pt-5 pb-3">Muro de publicaciones</h1>
    <% for(let i = 0; i< find.length; i++){%>
        <div id="card" class="col">
            <div class="card" id="car">
              <img style="width: 100%; height: 320px;" src="<%= find[i].urlimagen%>" class="card-img-top" alt="...">
              <div class="card-body" style="background-color:<%= find[i].color%>; color:<%= find[i].colorletra%>">
                <h5 class="card-title"><%= find[i].titulo%></h5>
                <p><%= find[i].introduccion%></p>
                <h2 class="fs-5">Categoria</h2>
                <p><%= find[i].categoria%></p>
                
                <div class="d-flex">
                  <img style="width: 50px; height: 50px;" src="https://cdn.pixabay.com/photo/2019/08/11/18/50/icon-4399684_960_720.png" alt="">
                  <p class="mt-3" style="margin-left: 10px;"><%= find[i].calendar%></p>
                </div>
                <div class="d-flex">
                  <img style="width: 50px; height: 50px;" src="https://i.pinimg.com/originals/db/c5/7b/dbc57b7afeed83e858137b975af91b3f.png" alt="">
                  <p class="mt-3" style="margin-left: 10px;"><%= find[i].time%></p>
                </div>
                
                <div class="d-flex justify-content-end">
                  <p class=""><a href="/vermas/<%= find[i]._id%>" class="text-white bg-dark p-2 rounded-3">VerMas</a></p>
                  <a style="margin-top: -15px;" href="/eliminar/<%= find[i]._id%>"><img style="width: 50px;" src="https://ayudawp.com/wp-content/uploads/2018/04/borrar-plugins-wordpress.png" alt=""></a>
                  <a style="margin-top: -15px;" href="/editar/<%= find[i]._id%>"><img style="width: 50px;" src="https://cdn-icons-png.flaticon.com/512/189/189264.png" alt=""></a>
              </div>
              </div>
            </div>
          </div>
    <%}%>
</div>


</body>